<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maincrmv2="clr-namespace:MainCRMV2"
             x:Class="MainCRMV2.Pages.TaskCreate_Page">
    <TableView>
        <TableSection x:Name="TSection">
            <ViewCell>
                <StackLayout Orientation="Horizontal">
                    <Picker x:Name="templatePicker" HorizontalOptions="FillAndExpand"/>
                    <maincrmv2:StyledButton Clicked="onClickedLoadTemplate" Text="Load Template" HorizontalOptions="FillAndExpand"/>
                    <maincrmv2:StyledButton Clicked="onClickedSaveTemplate" Text="Save as Template" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </ViewCell>
            <ViewCell>
                <StackLayout Orientation="Horizontal">
                    <maincrmv2:StyledButton Clicked="onClickAddFields" Text="Add Fields" HorizontalOptions="FillAndExpand"/>
                    <maincrmv2:StyledButton Clicked="onClickedCreate" Text="Create Task" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            </ViewCell>
        </TableSection>
    </TableView>
</ContentPage>