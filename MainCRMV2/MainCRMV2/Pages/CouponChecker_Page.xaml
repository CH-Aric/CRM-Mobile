<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:maincrmv2="clr-namespace:MainCRMV2"
             mc:Ignorable="d"
             x:Class="MainCRMV2.Pages.CouponChecker_Page">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label Text="Enter the Coupon to check!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="CouponEntry" HorizontalOptions="FillAndExpand"/>
            <maincrmv2:StyledButton Clicked="onClickCheck" Text="Check Coupon"/>
            <Label Text="Details:" x:Name="detailDisplay" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" HorizontalTextAlignment="Start" VerticalTextAlignment="Start"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>