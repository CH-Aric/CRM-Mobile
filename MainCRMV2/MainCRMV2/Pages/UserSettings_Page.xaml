<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maincrmv2="clr-namespace:MainCRMV2"
             x:Class="MainCRMV2.Pages.UserSettings_Page">
    <TableView>
        <TableSection x:Name="TSection">
            <ViewCell>
                <StackLayout Orientation="Horizontal">
                    <maincrmv2:StyledButton Text="Save" Clicked="onClicked"/>
                    <maincrmv2:StyledButton Text="Grant Permissions" Clicked="onClickedPermissions"/>
                    <Entry x:Name="UsernameEntry" Placeholder="Username"/>
                    <Entry x:Name="PasswordEntry" Placeholder="Password"/>
                </StackLayout>
            </ViewCell>
            <ViewCell>
                <StackLayout Orientation="Horizontal">
                    <Label Text="ID Key"/>
                    <Label x:Name="AgentIDK"/>
                </StackLayout>
            </ViewCell>
            <ViewCell>
                <StackLayout Orientation="Horizontal">
                    <Label Text="ID Number"/>
                    <Label x:Name="AgentID"/>
                </StackLayout>
            </ViewCell>
        </TableSection>
    </TableView>
</ContentPage>